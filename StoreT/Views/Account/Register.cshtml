@model StoreT.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<link rel="stylesheet" href="~/css/st.css" />
<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/log.js" asp-append-version="true"></script>
</environment>

<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" id="login-box"/>
    <div>
        <div>
            <label asp-for="Email">
                Введите Email
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </label><br />
        </div>
        <div>
            <label asp-for="FirstName">
                Введите Имя
                <input type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName" />
            </label><br />
        </div>
        <div>
            <label asp-for="LastName">
                Введите Фамилию
                <input type="text" asp-for="LastName" />
                <span asp-validation-for="LastName" />
            </label><br />
        </div>
        <div>
            <label asp-for="Password">
                Введите пароль
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </label><br />
        </div>
        <div>
            <label asp-for="PasswordConfirm">
                Повторите пароль
                <input asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm" />
            </label><br />
        </div>
        <div>
            <button type="submit" class="submit">Sign Up</button>
        </div>
    </div>
</form>